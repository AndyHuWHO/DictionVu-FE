{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,            // ‚Üê prevents TS from type-checking .d.ts in node_modules
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts"              
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
